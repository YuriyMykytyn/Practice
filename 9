#include <stdio.h>
#include <windows.h>
#include <math.h>

int minimumSteps(int x, int y) {
    int diff = y - x;
    if (diff <= 2)
        return diff;
    int steps = 0;
    int k = 1;
    while (diff > 0) {
        diff -= k;
        steps++;
        if (steps % 2 == 0)
            k++;
    }
    return steps;
}
int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int x, y;
    printf("Введіть значення x: ");
    scanf("%d", &x);
    printf("Введіть значення y: ");
    scanf("%d", &y);
    int result = minimumSteps(x, y);
    printf("Мінімальна кількість кроків: %d\n", result);
}
